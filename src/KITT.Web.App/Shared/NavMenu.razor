@inject IStringLocalizer<Resources.Shared.NavMenu> Localizer

<AuthorizeView>
    <Authorized>
        <MudNavMenu Class="mud-width-full">
            <MudNavLink Href="/" Icon="@Icons.Filled.Dashboard">@Localizer[nameof(Resources.Shared.NavMenu.DashboardMenuLabel)]</MudNavLink>
            <MudNavGroup Title="Console" @bind-Expanded="isConsoleExpanded">
                <MudNavLink Href="/streamings" Icon="@Icons.Filled.Videocam">@Localizer[nameof(Resources.Shared.NavMenu.StreamingsMenuLabel)]</MudNavLink>
                <MudNavLink Href="/proposals" Icon="@Icons.Filled.Lightbulb">@Localizer[nameof(Resources.Shared.NavMenu.ProposalsMenuLabel)]</MudNavLink>
            </MudNavGroup>
            
            <MudNavLink Href="/settings" Icon="@Icons.Filled.Settings">@Localizer[nameof(Resources.Shared.NavMenu.SettingsMenuLabel)]</MudNavLink>
            <MudNavLink Href="/tools" Icon="@Icons.Filled.Api">Tools</MudNavLink>
        </MudNavMenu>
    </Authorized>
</AuthorizeView>

@code {
    private bool isConsoleExpanded = true;
}
